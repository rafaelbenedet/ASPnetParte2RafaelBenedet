<body class="container" style="padding-top:30px">

    <div class="p-3 mb-2 bg-success text-white">Cadastro e Consulta ViaCEP</div>




    <div class="container form-inline" style="margin-top:30px">
        <form asp-action="ConsultaPorCEP" asp-controller="Consulta">
            <input type="text" id="txtCEP" class="form-control col-6" placeholder="Digite seu CEP" name="txtCEP" />
            <input type="submit" value="Cadastro e Consulta" class="btn btn-dark" />
        </form>
    </div>

    <div class="container" style="margin-top:30px">
        <div class="form-group">
            <label asp-for="Logradouro">Logradouro</label>
            <input type="text" asp-for="Logradouro" disabled class="form-control col-4"/>
        </div>

        <div class="form-group">
            <label asp-for="Complemento">Complemento</label>
            <input type="text" asp-for="Complemento" disabled class="form-control col-4" />
        </div>

        <div class="form-group">
            <label asp-for="Bairro">Bairro</label>
            <input type="text" asp-for="Bairro" disabled class="form-control col-4" />
        </div>

        <div class="form-group">
            <label asp-for="Localidade">Localidade</label>
            <input type="text" asp-for="Localidade" disabled class="form-control col-4" />
        </div>


        <div class="form-group">
            <label asp-for="UF">UF</label>
            <input type="text" asp-for="UF" disabled class="form-control col-4" />
        </div>

     

   
    </div>









    <br />

    <div>

        <table class="table table-striped table-dark">


            <thead>
                <tr>
                    <th scope="col">CEP</th>

                    <th scope="col">Logradouro</th>

                    <th scope="col">Complemento</th>

                    <th scope="col">Bairro</th>

                    <th scope="col">Localidade</th>

                    <th scope="col">UF</th>

