@model EnderecoCompleto


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Gerenciamento</title>
</head>
<body class="container" style="padding-top:30px">

    <div class="p-3 mb-2 bg-success text-white">Cadastro e Consulta ViaCEP</div>




    <div class="container form-inline" style="margin-top:30px">
        <form asp-action="ConsultaPorCEP" asp-controller="Consulta">
            <input type="text" id="txtCEP" class="form-control col-6" placeholder="Digite seu CEP" name="txtCEP" />
            <input type="submit" value="Cadastro e Consulta" class="btn btn-dark" />
        </form>
    </div>

    <div class="container" style="margin-top:30px"/>
    
    <br />

    <div>

        <table class="table table-striped table-dark">


            <thead>
                <tr>
                    <th scope="col">CEP</th>

                    <th scope="col">Logradouro</th>

                    <th scope="col">Complemento</th>

                    <th scope="col">Bairro</th>

                    <th scope="col">Localidade</th>

                    <th scope="col">UF</th>

                </tr>
            </thead>

            <tbody>

                @foreach (Endereco p in Model.ListaEndereco) {

                    <tr>
                        <td>
                            @p.CEP
                        </td>
                        <td>
                            @p.Logradouro
                        </td>
                        <td>
                            @p.Complemento
                        </td>
                        <td>
                            @p.Bairro
                        </td>
                        <td>
                            @p.Localidade
                        </td>
                        <td>
                            @p.UF
                        </td>
                    </tr>
                }
</table>
                


    </div>


</body>
</html>
